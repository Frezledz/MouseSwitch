<Window x:Class="MouseSwitch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MouseSwitch"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="429*"/>
            <ColumnDefinition Width="371*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name ="ShortSTR" HorizontalAlignment="Left" Margin="10,29,0,0" TextWrapping="Wrap" Text="SHIFT,S" VerticalAlignment="Top" Width="216" Height="18" TextChanged="TextBox_TextChanged"/>
        <Label Content="ShortCut Key combination :"/>
        <Button Content="Update" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Click="SubmitButton_Click"/>

    </Grid>
</Window>
